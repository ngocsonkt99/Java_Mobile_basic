<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/button_thoat"
        android:layout_width="162dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="Thoat" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edittext_manv"
            android:layout_width="168dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Ma so nv"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/edittext_tennv"
            android:layout_width="245dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Ho ten nv"
            android:inputType="textPersonName" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView"
            android:layout_width="0dp"
            android:layout_height="31dp"
            android:layout_weight="1"
            android:text="Gioi tinh" />

        <RadioButton
            android:id="@+id/radioButton"
            android:layout_width="54dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="RadioButton" />

        <RadioButton
            android:id="@+id/radioButton2"
            android:layout_width="38dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="RadioButton" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:text="Phong ban" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="201dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>

    <EditText
        android:id="@+id/edittext_gioitinh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Gioi tinh"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/edittext_phongban"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Phong ban"
        android:inputType="textPersonName" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_them"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Them" />

    </LinearLayout>



</LinearLayout>